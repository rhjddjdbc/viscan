pipeline {
    agent any

    environment {
        REPO_URL = 'https://github.com/rhjddjdbc/viscan.git'
    }

    stages {
        stage('Checkout') {
            steps {
                git branch: 'main', url: "${REPO_URL}"
            }
        }

        stage('Build') {
            steps {
                echo "Building viscan..."
                sh 'make'
            }
        }

        stage('Test') {
            steps {
                echo "Running tests..."
                // This runs the viscan binary on a known file (for demo)
                // Replace './src/main.c' with a real test file or test script
                sh './viscan --verbose ./src/main.c || true'
            }
        }

        stage('Archive') {
            steps {
                echo "Archiving artifacts..."
                archiveArtifacts artifacts: 'viscan', fingerprint: true
            }
        }
    }

    post {
        success {
            echo 'Build completed successfully!'
        }
        failure {
            echo 'Build failed.'
        }
    }
}
